{
        "$schema": "http://json-schema.org/schema#",
        "id": "http://www.colloquy.us/timeline-schema.json",
        "type": "array",
        "items": {
                "type": "object",
                "properties": {
                        "title": {
                                "$ref": "#/definitions/bilingual"
                        },
                        "work" : {
                                "type": "array",
                                "items": {
                                        "type": "array",
                                        "items": {
                                                "$ref": "#/definitions/date-optday"
                                        },
                                        "minItems": 2,
                                        "maxItems": 2
                                }
                        },
                        "milestone": {
                                "type": "array",
                                "items": {
                                        "type": "object",
                                        "properties": {
                                                "desc": {"$ref": "#/definitions/bilingual"},
                                                "date": {"$ref": "#/definitions/date-optday"}
                                        }
                                }
                        }
                }
        },
        "definitions": {
                "date-optday": {
                        "type": "string",
                        "pattern": "\\d{4}-\\d{2}-?\\d{0,2}",
                        "description": "yyyy-mm or yyyy-mm-dd date"
                },
                "bilingual":{
                        "type": "object",
                        "properties":{
                                "ru": {"type": "string"},
                                "en": {"type": "string"}
                        }
                }
        }
}