{
        "$schema": "http://json-schema.org/schema#",
        "id": "http://www.colloquy.us/timeline-schema.json",
        "type": "array",
        "items": {
                "type": "object",
                "properties": {
                        "title": {
                                "$ref": "#/definitions/bilingual"
                        },
                        "work" : {
                                "type": "array",
                                "items": {
                                        "type": "object",
                                        "properties": {
                                                "start": {
                                                        "$ref": "#/definitions/date-optday"
                                                },
                                                "end": {
                                                        "$ref": "#/definitions/date-optday"
                                                },
                                                "detail": {
                                                        "type": "string"
                                                },
                                                "precision": {
                                                        "enum": ["appx", "exact"]
                                                },
                                                "activity": {
                                                        "enum": ["conception", "work"]
                                                },
                                                "breaks": {
                                                        "type": "boolean"
                                                }
                                        }
                                }
                        },
                        "pub" : {
                                "type": "integer"
                        }
                }
        },
        "definitions": {
                "date-optday": {
                        "type": "string",
                        "pattern": "\\d{4}-\\d{2}-?\\d{0,2}",
                        "description": "yyyy-mm or yyyy-mm-dd date"
                },
                "bilingual":{
                        "type": "object",
                        "properties":{
                                "ru": {"type": "string"},
                                "en": {"type": "string"}
                        }
                }
        }
}